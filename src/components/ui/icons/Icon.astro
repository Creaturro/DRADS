---
import { Icons } from "./icons.ts";

interface Path {
  d: string;
  class?: string;
}

const { name, class: className } = Astro.props;

let icon = (Icons as any)[name] || {};

let paths: Path[] = icon.paths || [];

// Combine the icon's default class with any passed class
const combinedClass = className ? `${icon.class} ${className}` : icon.class;
---

{
  icon ? (
    <svg
      class={combinedClass}
      height={icon.height}
      viewBox={icon.viewBox}
      width={icon.width}
      fill={icon.fill}
      clip-rule={icon.clipRule}
      fill-rule={icon.fillRule}
      stroke={icon.stroke}
      stroke-width={icon.strokeWidth}
      stroke-linecap={icon.strokeLinecap}
      stroke-linejoin={icon.strokeLinejoin}
    ><title>{icon.title}</title>
      {paths.map((path: Path) => (
        <path d={path.d} class={path.class || ""} />
      ))}
    </svg>
  ) : (
    "Icon not found"
  )
}
