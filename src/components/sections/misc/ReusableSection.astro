---
// Props: title (string), description (string), leftContent (slot), rightContent (slot)
const { title, description } = Astro.props;
---
<section class="w-full pl-0 pr-4 md:px-8 pt-[0px] pb-12 text-neutral-100" style="background-color:#222730;">
  <div class="max-w-7xl mx-auto">
    <h2 class="font-h2">{title}</h2>
    <h3 class="font-h3 text-left w-full lg:w-[70%] mb-8">{description}</h3>
    <div class="flex flex-col lg:flex-row gap-8 md:gap-8">
      <div class="w-full lg:w-1/3 xl:w-1/2 lg:min-w-0 lg:flex-shrink">
        <slot name="leftContent" />
      </div>
      <div class="w-full lg:w-2/3 xl:w-1/2 lg:flex-shrink-0">
        <slot name="rightContent" />
      </div>
    </div>
  </div>
</section> 