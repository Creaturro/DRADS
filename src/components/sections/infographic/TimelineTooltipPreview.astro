---
import TimelineTooltip from "./TimelineTooltip.astro";
---
<div class="dark bg-[#23272f] min-h-screen flex items-center justify-center">
  <div class="flex flex-row gap-8 items-end">
    <!-- Magenta: tail on right (points to timeline) -->
    <TimelineTooltip
      text={`working\nprototype`}
      color="#AB1E81"
      direction="left"
      showConnector={true}
    >
      <span slot="icon" class="flex justify-center items-center w-full">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="22" viewBox="0 0 37.517 26.447">
          <path d="M7517.254,17143.445h-21.949a3.307,3.307,0,0,1-3.3-3.3v-19.832a3.313,3.313,0,0,1,3.3-3.309h18.644v6.613h-18.644v16.527h21.949v3.3Zm4,0h0v-3.3h.5v-16.527h-3.8V17117h3.8a3.32,3.32,0,0,1,3.309,3.309v14.766Zm-20.165-4.953v0l-2.314-2.312,4.255-4.3-4.3-4.3,2.358-2.311,6.609,6.609-6.609,6.611Z" transform="translate(-7492.001 -17117)" fill="#fff"></path>
          <path d="M115.733-773.553V-788.43h-3.306V-800H124l-3.306,8.265H124Z" transform="translate(-86.48 800)" fill="#fff"></path>
        </svg>
      </span>
    </TimelineTooltip>
    <!-- Cyan: tail on left (points to timeline) -->
    <TimelineTooltip
      text={`design\nprototype`}
      color="#1DA6AE"
      direction="right"
      showConnector={true}
    />
  </div>
</div> 