---
import InfographicCard from "./InfographicCard.astro";
---

<div class="flex flex-row w-full h-full gap-8 px-4">
  <!-- Left column: 5 cards -->
  <div class="flex flex-col gap-8 basis-1/2 items-start justify-start">
    <InfographicCard title="Frontend Coding" description="Parallel work streams with design consistency." >
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="#3B4252"/><path d="M8 12l2 2 4-4" stroke="#fff" stroke-width="2" fill="none"/></svg>
    </InfographicCard>
    <InfographicCard title="Backend API" description="Robust backend services for scalability.">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="4" fill="#3B4252"/><path d="M8 12h8" stroke="#fff" stroke-width="2"/></svg>
    </InfographicCard>
    <InfographicCard title="Design System" description="Unified design language for all platforms.">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="6" y="6" width="12" height="12" rx="2" fill="#3B4252"/><circle cx="12" cy="12" r="3" fill="#fff"/></svg>
    </InfographicCard>
    <InfographicCard title="Testing" description="Automated and manual QA for reliability.">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="4" fill="#3B4252"/><path d="M8 16l8-8" stroke="#fff" stroke-width="2"/></svg>
    </InfographicCard>
    <InfographicCard title="Deployment" description="Seamless CI/CD to production.">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="#3B4252"/><path d="M12 8v8M8 12h8" stroke="#fff" stroke-width="2"/></svg>
    </InfographicCard>
  </div>
  <!-- Right column: 6 cards, blue background -->
  <div class="flex flex-col gap-8 basis-1/2 items-end justify-start">
    <InfographicCard title="Research" description="In-depth research and discovery phase." bgColor="blue">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="4" fill="#1D282F"/><path d="M12 8v8M8 12h8" stroke="#fff" stroke-width="2"/></svg>
    </InfographicCard>
    <InfographicCard title="Wireframes" description="Rapid prototyping and wireframing." bgColor="blue">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="6" y="6" width="12" height="12" rx="2" fill="#1D282F"/><circle cx="12" cy="12" r="3" fill="#fff"/></svg>
    </InfographicCard>
    <InfographicCard title="UI Design" description="High-fidelity UI design for all screens." bgColor="blue">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="#1D282F"/><path d="M8 12l2 2 4-4" stroke="#fff" stroke-width="2" fill="none"/></svg>
    </InfographicCard>
    <InfographicCard title="Development" description="Agile development sprints." bgColor="blue">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="4" fill="#1D282F"/><path d="M8 16l8-8" stroke="#fff" stroke-width="2"/></svg>
    </InfographicCard>
    <InfographicCard title="QA & Testing" description="Comprehensive quality assurance." bgColor="blue">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" fill="#1D282F"/><path d="M12 8v8M8 12h8" stroke="#fff" stroke-width="2"/></svg>
    </InfographicCard>
    <InfographicCard title="Launch" description="Go-live and post-launch support." bgColor="blue">
      <svg slot="icon" class="w-24 h-24 text-white" fill="currentColor" viewBox="0 0 24 24"><rect x="6" y="6" width="12" height="12" rx="2" fill="#1D282F"/><circle cx="12" cy="12" r="3" fill="#fff"/></svg>
    </InfographicCard>
  </div>
</div> 