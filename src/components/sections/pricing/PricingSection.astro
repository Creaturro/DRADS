---
// Import SecondaryCTA component for use in this module
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define props from Astro
const { pricing } = Astro.props;

// Define TypeScript type for services.
type Service = {
  name: string;
  description: string;
  features: Array<string>;
  icon: string;
};

interface PricingSectionProps {
  title: string;
  subTitle: string;
  services: Service[];
  ctaTitle: string;
  ctaSubtitle: string;
  ctaButtonText: string;
  ctaButtonUrl: string;
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Section heading and sub-heading -->
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="font-h2">
      Custom Solutions for Your Business
    </h2>
    <p class="font-h3 mt-4 text-center">
      Every project is unique. Get a personalized quote tailored to your specific requirements and budget.
    </p>
  </div>

  <!-- Services Overview -->
  <div class="mb-12 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <!-- Custom Software Development -->
    <div class="rounded-xl bg-third p-6 border border-primary/20">
      <div class="mb-4 flex items-center gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/20">
          <Icon name="code" class="h-6 w-6 text-primary" />
        </div>
        <h3 class="font-h4">Custom Software Development</h3>
      </div>
      <p class="font-h4 mb-4 text-neutral-300">
        Tailored software solutions designed specifically for your business needs and workflows.
      </p>
      <ul class="space-y-2 text-sm text-neutral-400">
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-primary" />
          <span>Full-stack development</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-primary" />
          <span>Custom integrations</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-primary" />
          <span>Scalable architecture</span>
        </li>
      </ul>
    </div>

    <!-- Rapid Application Development -->
    <div class="rounded-xl bg-third p-6 border border-secondary/20">
      <div class="mb-4 flex items-center gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-secondary/20">
          <Icon name="rocket" class="h-6 w-6 text-secondary" />
        </div>
        <h3 class="font-h4">Rapid Application Development</h3>
      </div>
      <p class="font-h4 mb-4 text-neutral-300">
        Accelerate your time-to-market with our proven rapid development methodology.
      </p>
      <ul class="space-y-2 text-sm text-neutral-400">
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-secondary" />
          <span>Agile methodology</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-secondary" />
          <span>Iterative development</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-secondary" />
          <span>Quick prototyping</span>
        </li>
      </ul>
    </div>

    <!-- Quality Assurance & Testing -->
    <div class="rounded-xl bg-third p-6 border border-infographics/20">
      <div class="mb-4 flex items-center gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-infographics/20">
          <Icon name="shield" class="h-6 w-6 text-infographics" />
        </div>
        <h3 class="font-h4">Quality Assurance & Testing</h3>
      </div>
      <p class="font-h4 mb-4 text-neutral-300">
        Comprehensive testing and quality assurance to ensure your software meets the highest standards.
      </p>
      <ul class="space-y-2 text-sm text-neutral-400">
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-infographics" />
          <span>Automated testing</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-infographics" />
          <span>Performance optimization</span>
        </li>
        <li class="flex items-center gap-2">
          <Icon name="checkCircle" class="h-4 w-4 text-infographics" />
          <span>Security auditing</span>
        </li>
      </ul>
    </div>
  </div>

  <!-- Custom Pricing CTA -->
  <div class="rounded-xl bg-gradient-to-r from-primary/10 to-secondary/10 p-8 text-center border border-primary/20">
    <h3 class="font-h2 mb-4">
      Ready to Get Started?
    </h3>
    <p class="font-h3 mb-6 max-w-2xl mx-auto">
      Let's discuss your project requirements and create a custom solution that fits your budget and timeline. 
      Our team will provide you with a detailed quote tailored to your specific needs.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <PrimaryCTA 
        title="Get Custom Quote" 
        url="/contact" 
        class="bg-primary hover:bg-primary/80 text-white px-8 py-3 rounded-lg font-semibold transition-colors"
      />
      <SecondaryCTA 
        title="Schedule Consultation" 
        url="/contact?type=consultation" 
        class="border-primary text-primary hover:bg-primary hover:text-white px-8 py-3 rounded-lg font-semibold transition-colors"
      />
    </div>

    <p class="font-quote mt-6 text-neutral-400">
      "No two projects are alike. That's why we create custom solutions, not cookie-cutter applications."
    </p>
  </div>
</section>
