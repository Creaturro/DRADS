---
import MainLayout from "@/layouts/MainLayout.astro";
import Icon from "@components/ui/icons/Icon.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import ReusableSection from "@components/sections/misc/ReusableSection.astro";
import Quota from "@components/ui/blocks/Quota.astro";
import CaseStudyTemplate from "@components/sections/case-study/CaseStudyTemplate.astro";

// Case studies data
const caseStudies = [
  {
    id: 1,
    title: "E-Commerce Platform Transformation",
    client: "TechRetail Inc.",
    industry: "E-Commerce",
    description: "Complete overhaul of legacy e-commerce system with modern microservices architecture, resulting in 300% performance improvement and 50% reduction in maintenance costs.",
    technologies: ["React", "Node.js", "PostgreSQL", "AWS"],
    metrics: {
      performance: "300%",
      costReduction: "50%",
      timeToMarket: "60%"
    },
    image: "/images/case-studies/ecommerce-platform.avif",
    featured: true
  },
  {
    id: 2,
    title: "Healthcare Management System",
    client: "MediCare Solutions",
    industry: "Healthcare",
    description: "Custom patient management system with HIPAA compliance, real-time data synchronization, and advanced analytics dashboard for healthcare providers.",
    technologies: ["Vue.js", "Python", "MongoDB", "Azure"],
    metrics: {
      efficiency: "250%",
      accuracy: "99.9%",
      compliance: "100%"
    },
    image: "/images/case-studies/healthcare-system.avif",
    featured: false
  },
  {
    id: 3,
    title: "Financial Trading Platform",
    client: "TradeFlow Capital",
    industry: "FinTech",
    description: "High-frequency trading platform with real-time market data processing, advanced risk management, and automated trading algorithms.",
    technologies: ["Angular", "Java", "Redis", "Kubernetes"],
    metrics: {
      latency: "0.1ms",
      throughput: "1M+",
      reliability: "99.99%"
    },
    image: "/images/case-studies/trading-platform.avif",
    featured: false
  },
  {
    id: 4,
    title: "Supply Chain Optimization",
    client: "Global Logistics Corp",
    industry: "Logistics",
    description: "End-to-end supply chain management system with IoT integration, predictive analytics, and real-time tracking capabilities.",
    technologies: ["React Native", "Go", "InfluxDB", "Docker"],
    metrics: {
      efficiency: "180%",
      costSavings: "35%",
      visibility: "Real-time"
    },
    image: "/images/case-studies/ecommerce-platform.avif",
    featured: false
  },
  {
    id: 5,
    title: "Educational Learning Platform",
    client: "EduTech Innovations",
    industry: "Education",
    description: "Comprehensive learning management system with AI-powered content recommendations, virtual classrooms, and advanced assessment tools.",
    technologies: ["Next.js", "Python", "TensorFlow", "AWS"],
    metrics: {
      engagement: "200%",
      completion: "85%",
      satisfaction: "4.8/5"
    },
    image: "/images/case-studies/healthcare-system.avif",
    featured: false
  },
  {
    id: 6,
    title: "Manufacturing Automation",
    client: "SmartFactory Industries",
    industry: "Manufacturing",
    description: "IoT-driven manufacturing automation system with predictive maintenance, quality control, and production optimization.",
    technologies: ["Vue.js", "C#", "SQL Server", "Azure IoT"],
    metrics: {
      productivity: "220%",
      downtime: "-70%",
      quality: "99.5%"
    },
    image: "/images/case-studies/trading-platform.avif",
    featured: false
  }
];

const liveLeadPersonas = [
  {
    icon: '/src/images/checkbox.svg',
    title: 'Lead',
    text: 'Leads experience a wow factor with lightning-fast human interaction, receiving personalised outreach within minutes of submitting their information. This immediate response creates a positive first impression and demonstrates the company\'s commitment to exceptional service.'
  },
  {
    icon: '/src/images/checkbox.svg',
    title: 'Sales Agent',
    text: 'Sales agents gain a competitive edge through real-time lead notifications and a user-friendly interface, allowing them to quickly claim and engage with potential clients. The app\'s comprehensive lead profile generation enables agents to tailor their approach, increasing their chances of successful conversions.'
  },
  {
    icon: '/src/images/checkbox.svg',
    title: 'Manager',
    text: 'Managers benefit from enhanced visibility into the sales process, with access to real-time performance metrics and automated daily summaries. This data-driven approach allows for more effective team management, optimized lead distribution, and the ability to identify and replicate successful strategies across the team.'
  }
];

const liveLeadFastResults = {
  icon: '/images/case-studies/fast results ico.svg',
  iconAlt: 'Fast Results Icon',
  title: 'Fast results',
  text: 'The implementation of a similar application will take 2 months, the first working version will be available as early as <span class="bg-yellow-400 text-neutral-900 px-2 py-0.5 rounded">2-3 weeks</span> after the start of work.'
};

const liveLeadCost = {
  icon: '/images/case-studies/cost ico.svg',
  iconAlt: 'Cost Icon',
  title: 'Cost',
  text: 'Building an app similar in scope will cost around <span class="bg-yellow-400 text-neutral-900 px-2 py-0.5 rounded">$12,000</span>.'
};
---

<MainLayout>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-b from-third to-neutral-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="font-h2 mb-6">
          Our Success Stories
        </h1>
        <p class="font-h3 max-w-3xl mx-auto">
          Discover how DRADS has transformed businesses across industries with custom software solutions that drive real results.
        </p>
      </div>
    </div>
  </section>

  <!-- Inbox App Case Study Section -->
  <section class="relative py-20 bg-neutral-900" style="margin-bottom:100px;">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Title Row: 1/4 + 3/4 columns -->
      <div class="flex flex-col md:flex-row items-center gap-8 mb-10">
        <div class="w-full md:w-1/4 flex justify-start mb-4 md:mb-0">
          <img src="/images/case-studies/inbox logo large.svg" alt="Inbox App Logo" class="h-20 w-auto" style="max-width:none;" />
        </div>
        <div class="w-full md:w-3/4">
          <h3 class="font-h3">Transforming cluttered inquiries into structured deals, saving hours and empowering the sales teams.</h3>
        </div>
      </div>
      <!-- 1/2 + 1/2 Columns Section -->
      <div class="flex flex-col md:flex-row gap-12">
        <!-- Left: Main Value Proposition -->
        <div class="w-full md:w-1/2">
          <p class="text-neutral-200 mb-6">The app automatically reads incoming emails looking for potential investing opportunities. An AI agent extracts data from the messages and turns them into structured deals that are validated by the sales team. This heavily speeds up data entry into a CRM system (with the structures the app creates the deal creation is automated), increases accuracy heavily, speeds up deal processing.</p>
          <div class="flex flex-col gap-8 mt-6">
            <div class="flex-1 bg-neutral-800 rounded-xl border border-neutral-700 p-6 flex items-center gap-4 min-w-[260px]">
              <img src="/images/case-studies/fast results ico.svg" alt="Fast Results Icon" style="width:30%;height:30%;min-width:24px;min-height:24px;max-width:40px;max-height:40px;" />
              <div>
                <h4 class="font-h4 text-primary mb-2">Fast results</h4>
                <p class="text-neutral-200 text-sm">The implementation of a similar application will take 2 months, the first working version will be available as early as <span class="bg-yellow-400 text-neutral-900 px-2 py-0.5 rounded">2-3 weeks</span> after the start of work.</p>
              </div>
            </div>
            <div class="flex-1 bg-neutral-800 rounded-xl border border-neutral-700 p-6 flex items-center gap-4 min-w-[260px]">
              <img src="/images/case-studies/cost ico.svg" alt="Cost Icon" style="width:30%;height:30%;min-width:24px;min-height:24px;max-width:40px;max-height:40px;" />
              <div>
                <h4 class="font-h4 text-primary mb-2">Cost</h4>
                <p class="text-neutral-200 text-sm">Building an app similar in scope will cost around <span class="bg-yellow-400 text-neutral-900 px-2 py-0.5 rounded">$15,000</span></p>
              </div>
            </div>
          </div>
        </div>
        <!-- Right: Persona Blocks -->
        <div class="w-full md:w-1/2 text-white flex flex-col gap-6">
          <div class="flex items-start gap-4">
            <img src="/src/images/checkbox.svg" alt="Checkbox" class="w-8 h-8 mt-1" />
            <div>
              <h4 class="font-h4 mb-1">Customer</h4>
              <p>Customers receive rapid responses, ensuring they always know the status of their inquiry. They experience a sense of immediate, professional attention, enhancing their confidence in the service.</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <img src="/src/images/checkbox.svg" alt="Checkbox" class="w-8 h-8 mt-1" />
            <div>
              <h4 class="font-h4 mb-1">Sales Agent</h4>
              <p>Can dramatically increase their productivity while reducing errors. They maintain full control over the process but now benefit from an AI assistant that automates data extraction and processing. This allows agents to focus on high-value tasks. The system aids in deal creation, ensuring consistency and accuracy.</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <img src="/src/images/checkbox.svg" alt="Checkbox" class="w-8 h-8 mt-1" />
            <div>
              <h4 class="font-h4 mb-1">Manager</h4>
              <p>Managers gain access to a wealth of structured data, providing unprecedented visibility into the deal flow and agent performance. This structured approach enables easy deal status and workflow analysis, supporting data-driven decision making. Managers can quickly identify trends, optimize processes, and provide targeted support to their team.</p>
            </div>
          </div>
        </div>
      </div>
      <!-- Feature & System Overview -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="flex flex-col gap-2">
          <div>
            <h4 class="font-h4 text-primary mb-4">Feature Highlight</h4>
            <p class="text-neutral-200 mb-4">The Inbox app cuts through the clutter of email inquiries, transforming noisy information into structured, actionable data. It features a smart board view that lets sales teams organize and prioritize deals at a glance, providing a clear picture of the entire pipeline.</p>
            <p class="text-neutral-200 mb-8">In practice, this means <span class="bg-yellow-400 text-neutral-900 px-2 py-0.5 rounded">time savings can go into hours every week</span>, allowing the agents to focus on other high-value activities like building customer relationships or strategizing on complex deals.</p>
          </div>
          <Quota 
            content="What I really like about this app is the practicality of the AI assistant. It's not just a fancy add-on – it's a workhorse that significantly speeds up the workflow. The assistant extracts key information from emails and helps create deals in HubSpot. We've programmed it to understand the nuances of the specific clients inquiries, so it can quickly categorize and prioritize incoming requests."
            author="Maciej"
            position="Deligo Owner"
            avatarSrc="/src/images/avatar Maciej.png"
            bgColor="#1DA6AE"
            textColor="#fff"
          />
        </div>
        <div>
          <h4 class="font-h4 text-primary mb-4">System overview</h4>
          <p class="text-neutral-200 mb-4">The app processes incoming emails, helps with data extraction and distributes information across multiple platforms. It notifies sales agents via Slack, pushes data to HubSpot pipelines, sends automatic SMS messages to clients, and provides data visualization capabilities, streamlining the customer inquiry management process.</p>
          <img src="/images/case-studies/inbox infographic.svg" alt="System Overview Diagram" class="w-full max-w-md mx-auto" />
        </div>
      </div>
      <!-- Screenshots/Details -->
      <h3 class="font-h3 mb-0 mt-8">Clear inbox with deal statuses</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        <div>
          <img src="/images/case-studies/inbox scr1.png" alt="Inbox Statuses Screenshot" class="rounded-lg border border-neutral-700 w-full h-128 object-cover" />
        </div>
        <div>
          <img src="/images/case-studies/inbox scr2.png" alt="Inbox Contact Screenshot" class="rounded-lg border border-neutral-700 w-full h-128 object-cover" />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-12 items-center">
        <div class="md:col-span-3">
          <img src="/images/case-studies/inbox scr3.png" alt="Inbox Deal Status Screenshot" class="rounded-lg border border-neutral-700 w-full" />
        </div>
        <div class="md:col-span-1 h-full flex items-center">
          <div class="w-full flex flex-col justify-center h-full">
            <h4 class="font-h4 text-primary mb-4" style="line-height: 1.4;">AI assistant prepares hints but the human makes the decision</h4>
            <p class="text-neutral-200 text-sm mt-6">The implemented AI assistant helps classify mail and deals but doesn't replace a human – the sales team members have full control over data processing.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Live Lead Case Study Section (custom markup, not using CaseStudyTemplate) -->
  <section class="relative py-20 bg-neutral-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Title Row: 1/4 + 3/4 columns -->
      <div class="case-study-title-row flex flex-col md:flex-row items-center gap-8 mb-10">
        <div class="w-full md:w-1/4 flex justify-start mb-4 md:mb-0 order-2 md:order-1">
          <img src="/images/case-studies/live lead logo large.svg" alt="Live Lead App Logo" class="h-20 w-auto case-study-logo" style="max-width:none;" />
        </div>
        <div class="w-full md:w-3/4 order-1 md:order-2">
          <h3 class="font-h3 case-study-title">Turning inquiries into sales opportunities at lightning speed.</h3>
        </div>
      </div>
      <!-- 1/2 + 1/2 Columns Section -->
      <div class="flex flex-col md:flex-row gap-12">
        <!-- Left: Main Value Proposition -->
        <div class="w-full md:w-1/2">
          <p class="text-neutral-200 mb-6">Live Lead transforms the initial stages of lead nurturing by connecting sales agents with potential clients in real-time. When a lead submits their information, the app immediately builds a comprehensive profile using external databases and AI-powered summarization. Sales agents receive instant notifications and have a window to claim the lead, fostering healthy competition. If unclaimed, the lead is automatically assigned, ensuring no opportunity is missed. This rapid response system, coupled with detailed lead insights, enables agents to provide personalized, timely outreach, significantly enhancing the chances of conversion.</p>
          <div class="flex flex-col gap-8 mt-6">
            <div class="flex-1 bg-neutral-800 rounded-xl border border-neutral-700 p-6 flex items-center gap-4 min-w-[260px]">
              <img src="/images/case-studies/fast results ico.svg" alt="Fast Results Icon" style="width:30%;height:30%;min-width:24px;min-height:24px;max-width:40px;max-height:40px;" />
              <div>
                <h4 class="font-h4 text-primary mb-2">Fast results</h4>
                <p class="text-neutral-200 text-sm" set:html={liveLeadFastResults.text}></p>
              </div>
            </div>
            <div class="flex-1 bg-neutral-800 rounded-xl border border-neutral-700 p-6 flex items-center gap-4 min-w-[260px]">
              <img src="/images/case-studies/cost ico.svg" alt="Cost Icon" style="width:30%;height:30%;min-width:24px;min-height:24px;max-width:40px;max-height:40px;" />
              <div>
                <h4 class="font-h4 text-primary mb-2">Cost</h4>
                <p class="text-neutral-200 text-sm" set:html={liveLeadCost.text}></p>
              </div>
            </div>
          </div>
        </div>
        <!-- Right: Persona Blocks -->
        <div class="w-full md:w-1/2 text-white flex flex-col gap-6">
          {liveLeadPersonas.map(persona => (
            <div class="flex items-start gap-4">
              <img src={persona.icon} alt="Checkbox" class="w-8 h-8 mt-1" />
              <div>
                <h4 class="font-h4 mb-1">{persona.title}</h4>
                <p>{persona.text}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      <!-- Feature Highlight, Screenshot, Quota, System Overview -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="flex flex-col gap-2">
          <div>
            <h4 class="font-h4 text-primary mb-4">Feature Highlight</h4>
            <p class="text-neutral-200 mb-4">The Live Lead App <span class='bg-yellow-400 text-neutral-900 px-2 py-0.5 rounded'>dramatically reduces response time to new</span> leads, enabling businesses to engage potential clients within minutes of their inquiry. This rapid, personalized interaction significantly increases the chances of converting leads into customers, maximizing the return on marketing investments and boosting overall sales efficiency.</p>
          </div>
          <img src="/images/case-studies/live-lead_scr1.png" alt="Live Lead App Screenshot" class="rounded-lg w-full my-6 livelead-screenshot" />
          <div class="livelead-quote-overlap">
            <Quota 
              content="The real-time experience was our biggest challenge, but leveraging existing external APIs was a game-changer for that feature. What I love most about this app is the genuine 'wow' moment leads experience when they get a personalized response so quickly."
              author="Maciej"
              position="Deligo Owner"
              avatarSrc="/src/images/avatar Maciej.png"
              bgColor="#1DA6AE"
              textColor="#fff"
            />
          </div>
        </div>
        <div>
          <h4 class="font-h4 text-primary mb-4">System overview</h4>
          <p class="text-neutral-200 mb-4">When a lead is captured, Live Lead App instantly begins processing. It leverages APIs to build a comprehensive lead profile, then notifies agents via Slack. The lead's information is synchronized with Hubspot, while the app facilitates immediate contact through personalized messages or calls.</p>
          <img src="/images/case-studies/livelead-infographic.png" alt="Live Lead System Overview" class="w-full max-w-md mx-auto" />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-primary/10 to-secondary/10">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-h2 mb-6">Ready to Start Your Project?</h2>
      <p class="font-h3 mb-8 text-neutral-300">
        Let's discuss how DRADS can transform your business with custom software solutions tailored to your specific needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <!-- Link styled as a button, with dynamic title, URL, and optional arrow -->
        <a class="group inline-flex items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-bold text-neutral-50 ring-zinc-500 transition duration-300 focus-visible:ring-3 outline-hidden border border-transparent bg-orange-400 hover:bg-orange-500 active:bg-orange-500 dark:focus:outline-hidden disabled:pointer-events-none disabled:opacity-50 2xl:text-base dark:ring-zinc-200" href="/contact">
          Get Custom Quote
          <!-- Display the arrow based on the 'noArrow' property -->
          <svg class="h-4 w-4 shrink-0 transition duration-300 group-hover:translate-x-1" height="24" viewBox="0 0 24 24" width="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><title></title><path d="m9 18 6-6-6-6" class=""></path></svg>
        </a>
        <!-- Styled hyperlink -->
        <a class="inline-flex items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-center text-sm font-medium text-neutral-600 shadow-xs outline-hidden ring-zinc-500 focus-visible:ring-3 transition duration-300 border border-neutral-200 bg-neutral-300 hover:bg-neutral-400/50 hover:text-neutral-600 active:text-neutral-700 disabled:pointer-events-none disabled:opacity-50 2xl:text-base ring-zinc-500 dark:border-neutral-700 dark:bg-zinc-700 dark:text-neutral-300 dark:ring-zinc-200 dark:hover:bg-zinc-600 dark:focus:outline-hidden" href="/contact?type=consultation">
          Schedule Consultation
        </a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
@media (min-width: 768px) {
  .livelead-screenshot {
    position: relative;
    z-index: 1;
  }
  .livelead-quote-overlap {
    margin-top: -4.5rem; /* Adjust as needed for 1/10 overlap */
    z-index: 2;
    position: relative;
    max-width: 90%;
    margin-left: auto;
    margin-right: auto;
  }
}
</style> 